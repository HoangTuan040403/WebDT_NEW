@model DoAnQuanLyTapHoa.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}
<style>
    body {
        font-family: Arial, sans-serif;
    }

    .circle-image {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        overflow: hidden;
        display: inline-block;
    }

        .circle-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .info-bg {
        width: 80%;
        background-color: #ffffff;
        padding: 20px;
        margin: 20px auto;
        border: 2px solid #000000;
    }

    .info {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .user-name {
        font-size: 24px;
        font-weight: bold;
        margin: 20px 0;
    }

    .edit-button-container {
        margin-top: 20px;
    }

    .edit-button {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
    }
</style>
<div class="container-fluid pb-5">

    <div class="row">

        <div class="col-sm-4 pl-3">
            <div class="info">
                <div class="circle-image">
                    @Html.DisplayNameFor(model => model.Hinh)
                </div>

                <div class="user-name"><strong>Tên:</strong>  @Html.DisplayFor(model => model.TenUser)</div>
                <div class="edit-button-container">
                    <button class="edit-button">Chỉnh sửa thông tin</button>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="info-bg card">
                <h1>Thông tin người dùng</h1>
                <div>
                    <strong>Email:</strong> @Html.DisplayFor(model => model.email)/div>
                    <div><strong>Ngày Sinh:</strong> @Html.DisplayFor(model => model.NgaySinh)</div>
                    <div><strong>Địa chỉ:</strong>   @Html.DisplayFor(model => model.DiaChi)</div>
                    <div class="edit-button-container">
                        <div class="row">
                            <button class="btn btn-primary"><a href="HienThiGioHang/Cart">Xem giỏ hàng</a></button>
                            <button class="btn btn-primary"> <a href="@Url.Action("DangXuat","NguoiDung")"> Đăng xuất</a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SanPham.TenSP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonGia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TongTienSP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonHang.MaDH)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaCTDH }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaCTDH }) |

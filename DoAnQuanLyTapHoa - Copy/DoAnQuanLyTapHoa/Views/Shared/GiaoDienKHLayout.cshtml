            <ul>
                <li><a href="#"><img src="~/Content/images/logo.png" style="width:40px" ," heigh: 40px" /></a></li>
                <li>
                    @using (Html.BeginForm("Productlist", "SanPhams", FormMethod.Get))
                    {
                        <input type="text" placeholder="Bạn cần tìm gì?" name="SearchString" required><i class="fas fa-search"></i>
                    }

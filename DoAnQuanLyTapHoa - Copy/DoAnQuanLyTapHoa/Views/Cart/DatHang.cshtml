@using DoAnQuanLyTapHoa.Models
@model List<MatHangMua>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/GiaoDienKHLayout.cshtml";
}

<h2>DatHang</h2>

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Hình sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th>Hình thức thanh toán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sp in Model)
        {
            <tr>
                @*<td>@sp.Masp</td>*@
                <td>@sp.Tensp</td>

                <td><img src="~/Content/images/@sp.Hinh1" style="width:60px; height:60px" /></td>
                <td>@String.Format("{0:0,0}", sp.Gia)</td>
                <td>@sp.SoLuong</td>
                <td>@String.Format("{0:0,0}", sp.ThanhTien())</td>
                <td>
                    @*@if (Session["Payment"] == Session["COD"])
                        {
                            Session["Payment"] = Session["COD"];

                        }
                        else
                        {
                            Session["Payment"] = Session["CK"];
                        }*@


            </tr>
        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td colspan="4">Tổng số lượng: @ViewBag.TongSL</td>
            <td colspan="5">Tổng tiền: @ViewBag.TongTien</td>
        </tr>
    </tbody>
</table>


@*@model DoAnQuanLyTapHoa.Models.SanPham*@
@model IEnumerable<DoAnQuanLyTapHoa.Models.SanPham>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/GiaoDienKHLayout.cshtml";
}

@* font awsome *@
<script src="https://kit.fontawesome.com/383abdf887.js" crossorigin="anonymous"></script>

<style>
    .headerOfProductList {
        padding: 0 50px;
        display: flex;
    }

    .linestraight {
        margin-right: 15px;
        height: 50px;
        border: 3px solid red;
    }

    hr {
        width: 1400px;
        border: 2px solid;
        padding: 0 50px;
        margin: 0 auto;
    }


    /*-------------------------------CSS PHAN SLIDER -----------------------------------------------*/
    .slider {
        margin-bottom: 20px;
    }

    .card-pro-img {
        width: 100%;
        height: 280px;
    }

    .card-pro-name, .card-pro-price {
        font-size: 1.25rem;
        font-weight: 700;
        text-align: center;
    }

    /*----------------css rating ngôi sao --------------*/
    .star-wrapper {
        text-align: center;
    }

        .star-wrapper i {
            font-size: 1em;
            color: #F2BE22;
            text-decoration: none;
            transition: all 0.5s;
        }

            .star-wrapper i:hover {
                color: gold;
                transform: scale(1.3);
            }


   

    /* ------------------- css banner -----------------*/
    .banner-product {
        width: 1300px;
        margin: 20px auto;
    }

    /* -------------------css flash sale sản phẩm ---------------*/
    .flash-sale-header {
        margin: 10px 0;
    }

    .flash-sale-hr {
        width: 1000px;
        margin: 10px auto;
        border: 2px solid #ffffff;
        opacity: 100%;
    }

    .flash-sale {
        width: 100%;
        height: 450px;
        background-color: #ED2B2A;
        border: 1px solid #000000;
    }

    .card-flashsale {
        background-color: #ffffff;
        height: 100%;
    }

    .card-flashsale-pro-img {
        width: 280px;
        height: 280px;
    }

        .card-flashsale-pro-img:hover {
            box-sizing: border-box;
            box-shadow: 5px 5px 10px 5px #888888;
            transform: scale(1.01, 1.01);
        }

    .card-flashsale-pro-name {
        text-transform: uppercase;
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-flashsale-pro-price {
        color: red;
        font-size: 1.1rem;
        font-weight: bold;
    }

    /*---------------------------------CSS PRODUCT--------------------------------------*/

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>

@* PHẦN SLIDER *@
<div class="container">
    <div id="demo" class="carousel slide" data-bs-ride="carousel">
        @*Indicators/dots*@
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
        </div>
        @*The slideshow/carousel*@
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/images/banner01.png" alt="Los Angeles" class="d-block w-100" style="height:400px">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/banner02.png" alt="Chicago" class="d-block w-100" style="height:400px">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/banner1.png" alt="New York" class="d-block w-100" style="height:400px">
            </div>
        </div>
        @*Left and right controls/icons*@
        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<div class="headerOfProductList">
    <div class="linestraight"></div>
    <h2>Sản phẩm </h2>
</div>

<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            decimal price = (decimal)item.GiaSp;
            <div class="col-sm-12 col-sm-6 col-md-3 col-lg-3" style="padding-top:12px">
                <div class="card">
                    <a href="@Url.Action("MoTa", "SanPhams", new { id = item.MaSP })">
                        <img style="padding-top:15px" class="card-img-top" src="~/Content/images/@item.Hinh1" />
                    </a>
                    <p class="namepro p-1">@Html.DisplayFor(model => item.TenSP)</p>
                    <p class="price">@Html.DisplayFor(model => item.GiaSp)</p>
                    <a href="/XemDonHang/TaoDonHang/@item.MaSP"><button>Thêm vào giỏ hàng</button></a>
                </div>
            </div>

        }

    </div>




